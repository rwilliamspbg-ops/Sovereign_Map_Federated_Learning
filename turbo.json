{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": [
    "NODE_ENV",
    "SOVEREIGNMAP_NETWORK",
    "SOVEREIGNMAP_PRIVACY_EPSILON",
    "SOVEREIGNMAP_PRIVACY_DELTA"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "proto:generate"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "*.tsbuildinfo"
      ],
      "outputMode": "full"
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:ci": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "proto:generate": {
      "cache": false,
      "outputs": ["src/proto/**"]
    }
  }
}
