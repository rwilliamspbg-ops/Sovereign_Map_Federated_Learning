# Use Nginx to serve static files
FROM nginx:1.27-alpine

# Copy your static frontend files (html, css, js) to the nginx html folder
# This assumes your frontend files are in the root or a 'frontend' folder
COPY . /usr/share/nginx/html

# Copy the nginx configuration we created earlier
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
