{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,           // Critical: Skips checking d.ts files
    "noEmit": false,                 // Ensure it actually outputs files
    "strict": false,                 // Relaxes type checking
    "noImplicitAny": false,          // Stops blocking on untyped variables
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@sovereignmap/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
